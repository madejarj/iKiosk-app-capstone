<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_linear"
    tools:context=".frag_home_menu.FragmentNewsFeed">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="30dp"
            android:paddingTop="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/news1"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingHorizontal="5dp"
                app:layout_constraintTop_toTopOf="parent"
                android:orientation="vertical"
                android:background="@drawable/draw_shape_rad_all_white"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/app_logo"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/icon" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/titlee"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_toRightOf="@+id/app_logo"
                            android:text="Triage Area Support"
                            android:fontFamily="@font/didact_gothic"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/titleee"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/app_logo"
                            android:fontFamily="@font/didact_gothic"
                            android:text="Engineering College COVID-19 SitRep"
                            android:textSize="15sp" />
                        <TextView
                            android:id="@+id/title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/app_logo"
                            android:text="May 24 | 10AM"
                            android:fontFamily="@font/didact_gothic"
                            android:textColor="@color/grey_light"
                            android:textSize="15sp" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/app_logo"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:paddingHorizontal="10dp"
                    android:paddingBottom="18dp"
                    android:paddingTop="5dp"
                    android:fontFamily="@font/didact_gothic"
                    android:text="There were 50 new cases reported in week 20, that is 10% higher than the previous week. For week 20, the following departments recorded the highest case counts: Computer Eng'g (35 cases), and Electronics Eng'g (15 cases)."
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/news2"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/news1"
                android:layout_marginTop="15dp"
                android:paddingTop="10dp"
                android:paddingHorizontal="5dp"
                android:orientation="vertical"
                android:background="@drawable/draw_shape_rad_all_white"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/app_logoo"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/icon" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/titleei"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_toRightOf="@+id/app_logo"
                            android:text="iKiosk Tech Support"
                            android:fontFamily="@font/didact_gothic"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/titleeei"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/app_logo"
                            android:fontFamily="@font/didact_gothic"
                            android:text="Engineering College COVID-19 SitRep"
                            android:textSize="15sp" />
                        <TextView
                            android:id="@+id/titlei"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/app_logo"
                            android:text="May 22 | 12PM"
                            android:fontFamily="@font/didact_gothic"
                            android:textColor="@color/grey_light"
                            android:textSize="15sp" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/messagei"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/app_logo"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:fontFamily="@font/didact_gothic"
                    android:paddingHorizontal="10dp"
                    android:paddingBottom="18dp"
                    android:paddingTop="5dp"
                    android:text="Please note that we will be experiencing server downtime on the 23rd May 2022 from 12AM to 6AM due to routine maintenance."
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/news2"
                android:layout_marginTop="15dp"
                android:paddingTop="10dp"
                android:paddingHorizontal="5dp"
                android:orientation="vertical"
                android:background="@drawable/draw_shape_rad_all_white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/icon" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_toRightOf="@+id/app_logo"
                            android:text="Triage Area Support"
                            android:fontFamily="@font/didact_gothic"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/app_logo"
                            android:fontFamily="@font/didact_gothic"
                            android:text="University Clinic Reminder"
                            android:textSize="15sp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/app_logo"
                            android:text="May 21 | 8AM"
                            android:fontFamily="@font/didact_gothic"
                            android:textColor="@color/grey_light"
                            android:textSize="15sp" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/app_logo"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:fontFamily="@font/didact_gothic"
                    android:paddingHorizontal="10dp"
                    android:paddingBottom="18dp"
                    android:paddingTop="5dp"
                    android:text="The University Clinic recommends washing your hands often, social distancing, and wearing a face mask as ways to help protect yourself and prevent the spread of viruses."
                    android:textSize="15sp" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</FrameLayout>