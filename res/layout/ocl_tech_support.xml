<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".TechSupport">

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="20dp"
    android:layout_marginTop="20dp"
    android:fontFamily="@font/maven_pro"
    android:gravity="start"
    android:text="Tech Support"
    android:textColor="@color/grey_dark"
    android:textSize="35sp"
    android:textStyle="bold"
    app:layout_constraintBottom_toBottomOf="@+id/back_arrow"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

<ImageView
    android:id="@+id/back_arrow"
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:layout_gravity="end"
    android:layout_marginEnd="18dp"
    android:layout_marginTop="20dp"
    android:src="@drawable/ic_back_arrow_grey"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/tech_supp"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="100dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_contact_support"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/back_arrow"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/number"
        android:layout_weight="1"
        android:layout_marginHorizontal="20dp"
        android:gravity="center_horizontal"
        android:textSize="18sp"
        android:text="Call us at 0912 345 6789 or 0987 654 3210"
        android:textColor="@color/grey_dark"
        android:textStyle="italic"
        android:textColorHint="@color/grey_dark"
        app:layout_constraintTop_toBottomOf="@id/tech_supp"
        android:layout_marginTop="50dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/email"
        android:layout_weight="1"
        android:layout_marginHorizontal="20dp"
        android:textSize="18sp"
        android:text="Email us at iKioskTechSupport@gmail.com"
        android:textColor="@color/grey_dark"
        android:textStyle="italic"
        android:textColorHint="@color/grey_dark"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/number"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fb"
        android:layout_weight="1"
        android:layout_marginHorizontal="20dp"
        android:textSize="18sp"
        android:text="Visit us at www.fb.com/iKioskTechSupport/"
        android:textColor="@color/grey_dark"
        android:textStyle="italic"
        android:textColorHint="@color/grey_dark"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/email"
        android:layout_marginTop="10dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>